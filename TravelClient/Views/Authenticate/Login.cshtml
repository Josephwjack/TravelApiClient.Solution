@{
  Layout = "_Layout";
}
@using TravelClient.Models;



@using System.Security.Claims

<h2>User Portal </h2>
<p>Register or login to access all features.</p>
<hr />

@if (User.Identity.IsAuthenticated)
{
  <p>Hello @User.Identity.Name!</p>
  @using (Html.BeginForm("LogOut", "Account"))
  {
    <input type="submit" class="btn btn-warning" value="Log out" />
  }
}
else
{
  <p>@Html.ActionLink("Register", "Register")</p>
  <p>@Html.ActionLink("Log in", "Login")</p>
}
<hr />




<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
